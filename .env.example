# Django
SECRET_KEY=change-me-to-a-random-long-string
DEBUG=false

# Database for docker-compose (the app will connect to this URL)
POSTGRES_DB=diary
POSTGRES_USER=diary
POSTGRES_PASSWORD=diary
# Compose service name is "db"
DATABASE_URL=postgresql://diary:diary@db:5432/diary

# Cloudinary (optional but recommended for media persistence)
CLOUDINARY_URL=

# Optional background video absolute URL
BACKGROUND_VIDEO=

# Hosts and CSRF
# Set your public domain or server IP here, comma separated if multiple
ALLOWED_HOSTS_EXTRA=
# Include protocol and domain, comma separated if multiple
CSRF_TRUSTED_ORIGINS_EXTRA=
